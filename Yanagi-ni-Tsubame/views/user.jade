extends layout
 
block content
  div.container
    h1 プレイヤーデータ
    div.row
      div.col-md-6.col-md-offset-3
        table.table.table-bordered.table-condensed
          tr
            td
              img(src= user.photo)
            if user.provider === "twitter"
              td= user.username
            else
              td= user.displayName
          tr
            td(style="color:hsl("+user.game.color*360+",100%,50%);") color
            td= user.game.color
      div.col-md-6.col-md-offset-3
        form(method="post", target="/")
          input(type="range",name="color",min="0",max="1",step="0.01",value= user.game.color)
          input.btn.btn-lg(type="submit",value="送信")
      div.col-md-6.col-md-offset-3
        a.btn.btn-lg.btn-info(href="/game", role="button") 　　　　Play!　　　　