extends layout

block content
  div.container
      h1= title
    div.hidden-xs
      if !isLogin
        div.row
          div.col-md-6.col-md-offset-3
            a.btn.btn-lg.btn-primary(href="/login/twitter", role="button")
              i.fa.fa-twitter-square.   login Twitter   
            a.btn.btn-lg.btn-primary(href="/login/facebook", role="button")
              i.fa.fa-facebook-square  login Facebook
      else
        div
          a.btn.btn-lg.btn-primary(href="/user", role="button")
            i.fa.fa-user  user page
      div
        a.btn.btn-lg.btn-info(href="/game", role="button") Play!
    div
      h3 About
      div
        p 
        |ヤナギニツバメはnode.js製の多人数参加型全方位シューティングです。
    div
      h3 How to play
      div.row
        div.col-md-6.col-md-offset-3
          table.table.table-bordered.table-condensed
            tbody
              tr
                td W A S D
                td 移動
              tr
                td 方向キー ↑ ← ↓ →
                td 攻撃
    if rank.length > 0
      div
        h3 ランキング
        div.col-md-6.col-md-offset-3
          table.table.table-condensed
            tbody
              - for(var i = 0; i < rank.length; i++) {
                tr
                  td= (i+1)
                  td= rank[i].playerName
                  td= rank[i].score
              - }
    div.container
      h3 推奨環境
      p google Chrome
      p Internet なんちゃら
      p firefox
      p opera
      p safari
